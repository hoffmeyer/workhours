extends layout

block content
  each week, key in weeks
    h2 Week #{key}
    table#workList
      tr.borderBottom
        th.left Start
        th.right Duration
        th.right Lunch
        th 
      - var sumDuration = 0;
      - var sumLunch = 0;
      each work in week
        - sumDuration = sumDuration + work.duration;
        - sumLunch = sumLunch + work.lunch;
        tr
          td.left= work.formattedStart
          td.right= work.duration
          td.right= work.lunch
          td
            a(href='/work/' + work.id) E
          td
            a(href='/delete/' + work.id) X
      tr.borderTop
        td Sum
        td.right= sumDuration
        td.right= sumLunch
        td 
        td
      tr.borderTop.bold
        td Week total
        td.right= (sumDuration - sumLunch)
        td
        td 
        td
