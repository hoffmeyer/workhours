extends layout

block content
  if(startDate != null )
    h2 Update work
  else
    h2 New work


  form(name=registerHours, method='POST', action='/register')
    div
      input(name='id', type="hidden", value=id)
      label(for='startDate') Start date
      input(name='startDate', id='startDate', type='date', value=startDate)
      label(for='startTime') Start time
      input(name='startTime', id='startTime', type='time', value=startTime)
    div
      label(for='duration') Hours
      input(name='duration', id='duration', type='number', value=duration)
    div
      button submit
